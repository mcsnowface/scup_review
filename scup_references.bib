	pages = {412},
	file = {Bjelanovic et al_2021_Precommercial Thinning Increases Spruce Yields in Boreal Mixedwoods in Alberta,.pdf:G\:\\My Drive\\Zotero\\Bjelanovic et al_2021_Precommercial Thinning Increases Spruce Yields in Boreal Mixedwoods in Alberta,.pdf:application/pdf},
